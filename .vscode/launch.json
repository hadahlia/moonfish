{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "gdb",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/build/fish.elf",
            "miDebuggerServerAddress": "127.0.0.1:9123",
            "miDebuggerPath": "/opt/libdragon/bin/mips64-elf-gdb",
            "MIMode": "gdb",
            "cwd": "${workspaceFolder}",
            "miDebuggerArgs": "-readnow",
            "stopAtEntry": true,
            "sourceFileMap": {
                "libdragon": "/opt/libdragon",
                "src/t3d": "~/n64dev/tiny3d/src/t3d"
            }
		}

	]
}